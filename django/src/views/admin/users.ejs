<%- include('../partials/admin-header') %>

<div class="admin-header">
  <h1>Manage Admin Users</h1>
  <a href="/admin" class="btn btn-outline">Back to Dashboard</a>
</div>

<% if (error) { %>
  <div class="alert alert-error"><%= error %></div>
<% } %>

<div class="users-page">
  <div class="form-container" style="max-width:100%;margin-bottom:32px">
    <form action="/admin/users/new" method="POST" class="admin-form">
      <h3>Add New Admin User</h3>
      <div class="form-row">
        <div class="form-group">
          <label for="username">Username</label>
          <input type="text" id="username" name="username" required placeholder="Enter username">
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" required placeholder="Enter password" minlength="4">
        </div>
      </div>
      <div class="form-group">
        <label for="role_id">Assign Role</label>
        <select id="role_id" name="role_id">
          <option value="">-- No Role --</option>
          <% roles.forEach(role => { %>
            <option value="<%= role.id %>"><%= role.name %></option>
          <% }) %>
        </select>
      </div>
      <button type="submit" class="btn btn-primary">Add User</button>
    </form>
  </div>

  <div class="table-responsive">
    <table class="admin-table">
      <thead>
        <tr>
          <th>Username</th>
          <th>Role</th>
          <th>Type</th>
          <th>Change Role</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(user => { %>
          <tr>
            <td><strong><%= user.username %></strong></td>
            <td>
              <span class="status-badge <%= user.is_super_admin ? 'status-delivered' : 'status-processing' %>">
                <%= user.role_name || 'No Role' %>
              </span>
            </td>
            <td>
              <% if (user.is_super_admin) { %>
                <span class="status-badge status-shipped">Super Admin</span>
              <% } else { %>
                <span class="text-muted">Regular</span>
              <% } %>
            </td>
            <td>
              <% if (!user.is_super_admin) { %>
                <form action="/admin/users/role/<%= user.id %>" method="POST" class="inline-form">
                  <select name="role_id" onchange="this.form.submit()">
                    <option value="">-- No Role --</option>
                    <% roles.forEach(role => { %>
                      <option value="<%= role.id %>" <%= user.role_id === role.id ? 'selected' : '' %>><%= role.name %></option>
                    <% }) %>
                  </select>
                </form>
              <% } else { %>
                <span class="text-muted">Cannot change</span>
              <% } %>
            </td>
            <td>
              <% if (!user.is_super_admin) { %>
                <form action="/admin/users/delete/<%= user.id %>" method="POST" style="display:inline" onsubmit="return confirm('Delete this admin user?')">
                  <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
              <% } else { %>
                <span class="text-muted">Protected</span>
              <% } %>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>

<%- include('../partials/admin-footer') %>
