<%- include('../partials/header') %>

<div class="account-page">
  <h1 class="page-title">My Reviews</h1>

  <div class="account-grid">
    <div class="account-sidebar">
      <div class="account-menu">
        <a href="/auth/account" class="account-menu-item">Profile</a>
        <a href="/auth/reviews" class="account-menu-item active">My Reviews</a>
        <a href="/auth/orders" class="account-menu-item">My Orders</a>
      </div>
    </div>

    <div class="account-content">
      <% if (locals.success) { %>
        <div class="alert alert-success"><%= success %></div>
      <% } %>
      <% if (locals.error) { %>
        <div class="alert alert-error"><%= error %></div>
      <% } %>

      <% if (reviews.length === 0) { %>
        <div class="empty-state">
          <h3>No reviews yet</h3>
          <p>You haven't reviewed any products yet. Start shopping and share your experience!</p>
          <a href="/shop" class="btn btn-primary">Browse Products</a>
        </div>
      <% } else { %>
        <% reviews.forEach(review => { %>
          <div class="my-review-card">
            <div class="my-review-product">
              <a href="/product/<%= review.product_id %>">
                <img src="<%= review.product_image %>" alt="<%= review.product_name %>" class="my-review-img">
              </a>
              <div class="my-review-product-info">
                <a href="/product/<%= review.product_id %>" class="my-review-product-name"><%= review.product_name %></a>
                <div class="stars-display review-stars">
                  <% for (let i = 1; i <= 5; i++) { %>
                    <span class="star <%= i <= review.rating ? 'filled' : '' %>">&#9733;</span>
                  <% } %>
                </div>
                <span class="review-date"><%= new Date(review.created_at).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></span>
              </div>
            </div>

            <% if (!locals.editingReviewId || locals.editingReviewId !== review.id) { %>
              <% if (review.review_text) { %>
                <p class="review-text"><%= review.review_text %></p>
              <% } %>
              <div class="my-review-actions">
                <a href="/auth/reviews?edit=<%= review.id %>" class="btn btn-sm btn-outline">Edit</a>
                <form action="/auth/reviews/delete/<%= review.id %>" method="POST" style="display:inline" onsubmit="return confirm('Are you sure you want to delete this review?')">
                  <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
              </div>
            <% } else { %>
              <form action="/auth/reviews/edit/<%= review.id %>" method="POST" class="review-edit-form">
                <div class="form-group">
                  <label>Rating</label>
                  <div class="star-rating-input">
                    <% for (let i = 5; i >= 1; i--) { %>
                      <input type="radio" name="rating" value="<%= i %>" id="edit-star<%= i %>-<%= review.id %>" <%= i === review.rating ? 'checked' : '' %>>
                      <label for="edit-star<%= i %>-<%= review.id %>">&#9733;</label>
                    <% } %>
                  </div>
                </div>
                <div class="form-group">
                  <label for="review_text_<%= review.id %>">Review</label>
                  <textarea name="review_text" id="review_text_<%= review.id %>" rows="3"><%= review.review_text || '' %></textarea>
                </div>
                <div class="my-review-actions">
                  <button type="submit" class="btn btn-sm btn-primary">Save</button>
                  <a href="/auth/reviews" class="btn btn-sm btn-outline">Cancel</a>
                </div>
              </form>
            <% } %>
          </div>
        <% }) %>
      <% } %>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
