<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>StyleVault Admin</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body class="admin-body">
  <nav class="admin-navbar">
    <div class="admin-nav-content">
      <a href="/admin" class="admin-logo">StyleVault <span>Admin</span></a>
      <% if (isAdmin) { %>
        <div class="admin-nav-links">
          <a href="/admin" class="admin-nav-item">Dashboard</a>
          <% if (isSuperAdmin || permissions.includes('manage_products')) { %>
            <a href="/admin/products/new" class="admin-nav-item">Add Product</a>
          <% } %>
          <% if (isSuperAdmin || permissions.includes('manage_categories')) { %>
            <a href="/admin/categories" class="admin-nav-item">Categories</a>
          <% } %>
          <% if (isSuperAdmin || permissions.includes('manage_roles')) { %>
            <a href="/admin/roles" class="admin-nav-item">Roles</a>
          <% } %>
          <% if (isSuperAdmin || permissions.includes('manage_users')) { %>
            <a href="/admin/users" class="admin-nav-item">Users</a>
          <% } %>
          <% if (isSuperAdmin || permissions.includes('manage_customers')) { %>
            <a href="/admin/customers" class="admin-nav-item">Customers</a>
          <% } %>
          <% if (isSuperAdmin || permissions.includes('manage_reviews')) { %>
            <a href="/admin/reviews" class="admin-nav-item">Reviews</a>
          <% } %>
          <a href="/" class="admin-nav-item admin-nav-store">View Store</a>
          <a href="/admin/logout" class="admin-nav-item admin-nav-logout">Sign Out</a>
        </div>
        <button class="mobile-menu-btn" onclick="document.querySelector('.admin-nav-links').classList.toggle('show')">&#9776;</button>
      <% } %>
    </div>
  </nav>
  <main class="admin-main">
